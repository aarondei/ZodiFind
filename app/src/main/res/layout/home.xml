<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/landingbg">

<!--    nav bar-->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_nav_fragment_container" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/bottom_nav_fragment_container"
        android:name="cit.edu.zodifind.fragments.BottomNavFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />


<!--    header-->

    <ImageView
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:src="@drawable/zodifind_textlogo_glow"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>


