<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    android:backgroundTint="@color/midnightBlue"
    style="@style/RoundedButton">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageZodiac"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/aquarius_icon"
            android:contentDescription="Zodiac Image"
            android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvZodiacName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AQUARIUS"
                android:fontFamily="@font/cinzel_medium"
                android:textSize="20sp"
                android:textColor="#FFA500"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvZodiacDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JAN 20 - FEB 18"
                android:fontFamily="@font/josefinsans_light"
                android:textColor="#ffffff"
                android:textSize="14sp"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>